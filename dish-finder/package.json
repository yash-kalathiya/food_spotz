{
  "name": "dish-finder",
  "version": "1.0.0",
  "description": "Mobile-first restaurant and dish discovery app with offline support",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "sql.js": "^1.10.3",
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
